{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@consts/*": ["./consts/*"],
      "@adapters/*": ["./adapters/*"],
      "@hocs/*": ["./hocs/*"],
      "@utils/*": ["./utils/*"],
      "@src/*": ["./*"],
      "@reducer/*": ["./reducer/*"],
      "@api/*": ["./api/*"],
      "@history/*": ["./history/*"],
      "@types/*": ["./types/*"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
}
