{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@consts/*": ["src/consts/*"],
      "@adapters/*": ["src/adapters/*"],
      "@hocs/*": ["src/hocs/*"],
      "@utils/*": ["src/utils/*"],
      "@src/*": ["src/*"],
      "@reducer/*": ["src/reducer/*"],
      "@api/*": ["src/api/*"],
      "@history/*": ["src/history/*"],
      "@types/*": ["src/types/*"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
}
